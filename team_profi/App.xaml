<Application x:Class="team_profi.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:team_profi"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--СТИЛИ ОКОН И ДЛЯ ВСЕГО ПРОЕКТА-->
                <ResourceDictionary Source="Theme\ModernWindowStyle.xaml"/>
                <ResourceDictionary Source="Theme\ModernFrameStyle.xaml"/>
                <ResourceDictionary Source="Theme\Control.xaml"/>

                <!--СТИЛИ ДЛЯ ЭЛЕМЕНТОВ-->
                <ResourceDictionary Source="Theme\StylesButtons.xaml"/>
                <ResourceDictionary Source="Theme\StylesTextBlock.xaml"/>
                <ResourceDictionary Source="Theme\StylesLabel.xaml"/>
                <ResourceDictionary Source="Theme\StylesTextBox.xaml"/>
                <ResourceDictionary Source="Theme\StylesBorder.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
        
         
    </Application.Resources>
</Application>
